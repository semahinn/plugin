{
    "name": "snr/plugin",
    "description": "Реализует систему типов (плагинов), классы которых помечаются аннотациями или атрибутами (вдохновлено Plugin API Drupal 8)",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Snr\\Plugin\\": "src/"
        }
    },
	"autoload-dev": {
        "psr-4": {
            "Snr\\Plugin\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Semahin Nikita",
            "email": "semahinnikita@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "doctrine/annotations": "^1.4",
        "snr/psr16cache": "^1.0",
        "psr/container": "^1.0",
        "symfony/event-dispatcher": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "symfony/dependency-injection": "^3.4"
    }
}
